<Window
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Widgets="clr-namespace:GS.Libraries.UI.Widgets;assembly=GS.Libraries.UI.Widgets" x:Class="GS.Libraries.UI.OrderSystemDashboardView" 
             mc:Ignorable="d" Title="Order System Dashboard" 
             WindowStartupLocation="CenterScreen" Height="700" Width="1000">
    <Grid>
        <ContentControl x:Name="HEADER_REGION" HorizontalAlignment="Left" VerticalAlignment="Top" Height="70" Width="992">
            <Widgets:HeaderWidget HorizontalAlignment="Left" VerticalAlignment="Top"/>
        </ContentControl>
        <ContentControl x:Name="CUSTOMERS_REGION" HorizontalAlignment="Left" VerticalAlignment="Top" Height="239" Width="992" Margin="0,75,0,0">
            <Widgets:CustomersWidget HorizontalAlignment="Left" VerticalAlignment="Top"/>
        </ContentControl>
        <ContentControl x:Name="ORDERS_REGION" HorizontalAlignment="Left" VerticalAlignment="Top" Height="350" Width="992" Margin="0,319,0,0">
            <Widgets:OrdersWidget HorizontalAlignment="Left" VerticalAlignment="Top"/>
        </ContentControl>
    </Grid>
</Window>
