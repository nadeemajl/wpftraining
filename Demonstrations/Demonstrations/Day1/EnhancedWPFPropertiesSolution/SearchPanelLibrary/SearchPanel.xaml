<UserControl x:Class="SearchPanelLibrary.SearchPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             x:Name="uc"
             mc:Ignorable="d" Height="98.12" Width="366.541">
    <Grid Background="LightGoldenrodYellow">
        <Label Content="Search String:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtSearchString" 
                 Text="{Binding ElementName=uc, Path=SearchString, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 HorizontalAlignment="Left" Height="23" Margin="10,41,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="347"/>
        <Button Content="Search" HorizontalAlignment="Left" Margin="282,69,0,0" VerticalAlignment="Top" Width="75" Height="19"/>

    </Grid>
</UserControl>
